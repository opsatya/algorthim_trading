# Flask Server Environment Variables
# Copy this file to .env and fill in your actual values

# OpenRouter API for AI responses
OPENROUTER_API_KEY=your_openrouter_api_key_here

# 5Paisa API Credentials
FIVE_PAISA_APP_NAME=your_app_name
FIVE_PAISA_APP_SOURCE=your_app_source
FIVE_PAISA_USER_ID=your_user_id
FIVE_PAISA_PASSWORD=your_password
FIVE_PAISA_USER_KEY=your_user_key
FIVE_PAISA_ENCRYPTION_KEY=your_encryption_key
FIVE_PAISA_EMAIL=your_email
FIVE_PAISA_DOB=your_date_of_birth

# Kotak Neo API Credentials
NEO_CONSUMER_KEY=your_consumer_key
NEO_CONSUMER_SECRET=your_consumer_secret
NEO_ACCESS_TOKEN=your_access_token
NEO_ENVIRONMENT=prod
NEO_FIN_KEY=your_fin_key

# Neo API Login Credentials (for session management)
NEO_MOBILE_NUMBER=your_mobile_number
NEO_PASSWORD=your_password
NEO_DEFAULT_OTP=your_default_otp

# AWS EC2 Deployment (if using remote deployment)
EC2_HOST=your_ec2_ip
EC2_USERNAME=ubuntu
EC2_KEY_PATH=path_to_your_pem_file
EC2_REMOTE_SCRIPT_PATH=path_to_remote_script

# Cache and Performance
CLEAR_CACHE=false
AI_RESPONSE_TIMEOUT=30

# Development Settings
DEBUG=true
LOG_LEVEL=INFO